# AllCodeRelay Event Check-in Webhook Configuration
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-this-in-production
PORT=5000

# Database Configuration
DB_PATH=events.db

# Security Configuration
# Add authentication tokens if needed
ADMIN_TOKEN=your-admin-access-token
WEBHOOK_SECRET=your-webhook-secret-key

# Email Configuration (optional)
# For sending check-in confirmations and alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=events@yourcompany.com

# Notification Configuration (optional)
# Slack webhook for real-time notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# SMS Configuration (optional)
# For SMS notifications using Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Event Configuration
DEFAULT_ACCESS_LEVEL=general
MAX_ATTENDEES_PER_EVENT=1000
ALLOW_LATE_CHECKIN=true
CHECKIN_WINDOW_HOURS=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=event-checkin.log

# Rate Limiting (optional)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Timezone Configuration
TIMEZONE=UTC
