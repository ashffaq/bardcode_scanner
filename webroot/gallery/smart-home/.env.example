# AllCodeRelay Smart Home Webhook Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000

# MQTT Broker Configuration (optional)
# If you're using MQTT for IoT device communication
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password

# Home Assistant Configuration (optional)
# If you're using Home Assistant for smart home control
HA_URL=http://localhost:8123
HA_TOKEN=your_home_assistant_long_lived_access_token

# Security Configuration
# Add authentication if needed
WEBHOOK_SECRET=your_webhook_secret_key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=smart-home-webhook.log

# Device Configuration
# You can override device settings here if needed
DEFAULT_LIGHT_BRIGHTNESS=80
DEFAULT_DIM_LEVEL=20

# Notification Configuration (optional)
# For sending alerts and confirmations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
